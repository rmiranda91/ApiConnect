                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Salir","Salir","Home",null,new{@class="dropdown-item"})
                    </div>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" method="get" action="/Home/Salir">                
                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Salir</button>
            </form>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jumbotron">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/bundles/general")
</body>
</html>
